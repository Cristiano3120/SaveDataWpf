<Window x:Class="SaveDataWpf.CustomWindows.EncryptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaveDataWpf.CustomWindows"
        mc:Ignorable="d"
            Height="200" Width="400" MinWidth="400" MinHeight="200" MaxWidth="400" MaxHeight="225"
        Background="#1f1e1f" WindowStyle="None" WindowStartupLocation="CenterScreen">

    <Grid x:Name="ParentGrid"> 
        <TextBlock FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,160,50">
            Password:
        </TextBlock>
        <TextBox x:Name="PasswordTextBox" Height="30" Width="240" Background="Transparent" 
                 Margin="0,5,0,0" FontSize="16"/>

        <Button x:Name="SaveBtn" Style="{StaticResource BorderBtn}" Height="30" Width="100" Background="#222" FontSize="16" Margin="0,140,0,0" HorizontalAlignment="Center"/>
    </Grid>
</Window>
