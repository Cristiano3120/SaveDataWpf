<Window x:Class="SaveDataWpf.CustomWindows.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaveDataWpf.CustomWindows"
        mc:Ignorable="d"
        Height="225" Width="400" MinWidth="400" MinHeight="225" MaxWidth="400" MaxHeight="225"
            Background="#1f1e1f" WindowStyle="None" WindowStartupLocation="CenterScreen">

    <Grid x:Name="ParentGrid">
        <TextBlock FontSize="18" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   Margin="0,0,185,150" Text="Name:"/>

        <TextBox x:Name="NameTextBox" Height="30" Width="240" 
                  Margin="0,0,0,90" FontSize="16"/>

        <TextBlock FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   Margin="0,0,170,0" Text="Content:"/>

        <TextBox x:Name="ContentTextBox" Height="30" Width="240" Margin="0,60,0,0" FontSize="16"/>

        <Button x:Name="SaveBtn" Style="{StaticResource BorderBtn}" Content="Save" Height="30" Width="100" Background="#222" FontSize="16" Margin="0,140,0,0" HorizontalAlignment="Center"/>
    </Grid>
</Window>
